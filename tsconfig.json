{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths":
    {
      "@subsocial/types": ["packages/types/src"],
      "@subsocial/types/*": ["packages/types/src/*"],
      "@subsocial/utils": ["packages/types/src"],
      "@subsocial/utils/*": ["packages/types/src/*"],
      "@subsocial/api": ["packages/api/src"],
      "@subsocial/api/*": ["packages/api/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
